<div class="container mt-5">
  <!-- show coming events -->
  <h1>Your coming adventures</h1>
  <br>
  <% if @bookings.nil? %>
    <p>You donâ€™t have anything coming up, start exploring haunted houses for your next trip.ğŸ˜¿</p>
    <%= link_to "Explore haunted houses", properties_path, class: "btn btn-primary mt-5 mb-5" %>
  <% else %>
    <% @future_bookings.each do |booking| %>
      <h3>Venue: <%= booking.property[:name] %></h3>
      <p>Haunted_level: <%= booking.property[:haunted_level] %></p>
      <p>Address: <%= booking.property[:address] %></p>
      <p>Date: <%= booking[:start_date] %> ~ <%= booking[:end_date] %> </p>
      <br>
      <br>

    <% end %>
  <% end  %>

<!-- show past events -->
  <h1 class="mt-5">Your past adventures</h1>
  <br>
  <% @past_bookings.each do |booking| %>
    <h3>Venue: <%= booking.property[:name] %></h3>
    <p>Haunted_level: <%= booking.property[:haunted_level] %></p>
    <p>Address: <%= booking.property[:address] %></p>
    <p>Date: <%= booking[:start_date] %> ~ <%= booking[:end_date] %> </p>
    <%= link_to "Review this booking", "/properties/#{booking.property_id}/bookings/#{booking.id}/reviews/new", class: "btn btn-primary creepy-btn" %>
    <br>
    <br>
  <% end %>

</div>
