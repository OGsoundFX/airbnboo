<div class="row">
  <% @properties.each do |property| %>
  <div class="card-grid col-lg-4 col-md-6 col-sm-12">
    <div class="card">
      <!-- <div class="card-image">
        <%= image_tag 'banner.jpg' %>
      </div> -->
      <h5 class="card-title"> <%= property.name %> </h5>
      <p class="card-text"> <%= truncate(property.address, length: 34, separator: ' ', omission: '') %> </p>
      <%= link_to "Haunt that place" , property_path(property), class: "btn btn-primary creepy-btn" %>
    </div>
  </div>
  <% end %>
</div>
